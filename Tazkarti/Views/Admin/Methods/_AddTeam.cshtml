@using Tazkarti.Models.Sport
@model Team
<div id="Conn" style="width:100%;height:100%">

	<form asp-action="AddTeam" asp-controller="Admin" method="post" enctype="multipart/form-data" style="width:60%;height:100%" id="dynamicForm">

		<div>
			<label class="col-form-label mt-4" for="inputDefault">Team Name</label>
			<input type="text" class="form-control" placeholder="Team Name" id="name" name="Name" value="@Model.Name">
			<div id="NameError" class="text-danger"></div>
		</div>
		<div>
			<label class="col-form-label mt-4" for="Year">Logo</label>
			<input type="file" class="form-control" placeholder="Logo" id="logo" name="Logo">
			<div id="LogoError" class="text-danger"></div> 
		</div>


		<div class="o-inp b">
			<button type="submit" class="btn btn-primary btn-lg bb">Submit</button>
		</div>
	</form>

</div>
